<odoo>
    <!-- List View -->
    <record id="view_sale_product_list" model="ir.ui.view">
        <field name="name">sale.product.list</field>
        <field name="model">sale.product</field>
        <field name="arch" type="xml">
            
            <list string="Sale Products">

                <field name="currency_id" column_invisible="True"/>
                <field name="name"/>
                <field name="price" widget="monetary"/>
                <field name="quantity"/>
                <field name="discount"/>
                <field name="amount" widget="monetary"/>
                <field name="company_id" />
                
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sale_product_form" model="ir.ui.view">
        <field name="name">sale.product.form</field>
        <field name="model">sale.product</field>
        <field name="arch" type="xml">
            <form string="Sale Product">

            <header>
                <!-- Add Print Button for PDF Report -->
                <button name="%(action_report_product_detail)d" 
                        string="Print Product Detail(PDF)" 
                        type="action" 
                        class="btn-primary"
                        icon="fa-print"/>


                 <!-- Add Print Button for XCEL Report -->
                <button name="%(action_report_product_detail_xlsx)d" 
                        string="Print Product Detail(XLSX)" 
                        type="action" 
                        class="btn-primary"
                        icon="fa-print"/>        
            </header>
            
            <sheet>
    <group>
        <field name="date"/>
        <field name="name"/>
        <field name="price"
               widget="monetary"
               decoration-danger="price &lt; 0"
               decoration-success="price &gt;= 0"/>
        
        <field name="quantity"
               decoration-danger="quantity &lt;= 0"
               decoration-success="quantity &gt; 0"/>

        <field name="discount"
               decoration-danger="discount &lt; 0 or discount &gt; 100"
               decoration-success="discount &gt;= 0 and discount &lt;= 100"/>

        <field name="amount" readonly="1" groups="ppnp_sale_custom.group_ppnp_manager"/>
         <field name="company_id" groups="base.group_multi_company"/>

    </group>

    <!-- Validation Messages: -->

     <!-- Price Messages -->
    <div class="alert alert-danger" invisible="price &gt;= 0">
        <strong>Invalid Price:</strong> You have entered a negative price. Please check your input.
    </div>

    <div class="alert alert-success" invisible="price &lt; 0">
        <strong>Success:</strong> Price is valid. Great job!
    </div>

    <!-- Quantity Messages -->
    <div class="alert alert-danger" invisible="quantity &gt;= 0">
        <strong>Invalid Quantity:</strong> You have entered a negative quantity. Please check your input.
    </div>

    <div class="alert alert-success" invisible="quantity &lt; 0">
        <strong>Success:</strong> Quantity is valid. Great job!
    </div>

</sheet>  
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_sale_product" model="ir.actions.act_window">
        <field name="name">Sale Products</field>
        <field name="res_model">sale.product</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item under Sales Configuration -->
    <menuitem id="menu_sale_product"
              name="Sale Products"
              parent="sale.menu_sale_config"
              action="action_sale_product" 
              sequence="1"/>



    <!-- Sale Info Tab in Sale Order -->
   <record id="sale_order_view_form_inherit_sale_info" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.info</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Sale Information" name="extra_info">

                    <field name="line_ids">
                    <list editable="bottom">
                        <field name="currency_id2" column_invisible="True"/>
                        <field name="sale_product_id"/>
                        <field name="product_price" widget="monetary"/>
                        <field name="product_quantity"/>
                        <field name="product_amount" widget="monetary"/>
                         <field name="prev_product_price" optional="show"/>
                        <field name="prev_product_quantity" optional="show"/>
                        <field name="prev_product_amount" optional="show"/>
                    </list>
                    
                </field>

                </page>
            </xpath>
        </field>
    </record>


</odoo>

