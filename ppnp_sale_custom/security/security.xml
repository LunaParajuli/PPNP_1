<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">

    <record id="group_ppnp_user" model="res.groups">
        <field name="name">PPNP Sale User</field>
        <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
    </record>

    <record id="group_ppnp_manager" model="res.groups">
        <field name="name">PPNP Sale Manager</field>
        <field name="implied_ids" eval="[(4, ref('ppnp_sale_custom.group_ppnp_user'))]"/>
    </record>

    <record id="ppnp_rule_user" model="ir.rule">
        <field name="name">User: Own Sale Products Only</field>
        <field name="model_id" ref="model_sale_product"/>
        <field name="groups" eval="[(4, ref('group_ppnp_user'))]"/>
        <!-- <field name="domain_force">[('create_uid', '=', user.id)]</field> -->

        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="ppnp_rule_manager" model="ir.rule">
        <field name="name">Manager: All Sale Products</field>
        <field name="model_id" ref="model_sale_product"/>
        <field name="groups" eval="[(4, ref('group_ppnp_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="ppnp_sale_product_multi_company_rule" model="ir.rule">
    <field name="name">Sale Product: Multi-company</field>
    <field name="model_id" ref="model_sale_product"/>
    <field name="global" eval="True"/>
    <field name="domain_force">
                     ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
    </field>
    </record>

</data>
</odoo>