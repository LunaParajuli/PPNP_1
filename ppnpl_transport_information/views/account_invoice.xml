<!--  Create a same notebook  in accounting  after other info .
    All the fields should be readonly in accounting invoice and data should be retrieved from inventory transfer which is linked to accounting invoice. 
-->
<odoo>
    <record id="account_move_form_inherit_transport" model="ir.ui.view">
        <field name="name">account.move.form.inherit.transport</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Transport Detail" name="transport_page">

                    <group string="Linked Delivery">
                        <!-- <group>
                            <field name="transport_picking_id"
                                   readonly="state in ('posted', 'cancel')"
                                   options="{'no_create': True, 'no_edit': True}"/>
                        </group> -->
                    </group>

                    <group string="Transport Information"
                           invisible="not transport_picking_id">
                        <group>
                            <field name="vehicle_name" readonly="1"/>
                            <field name="driver_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="registration_number" readonly="1"/>
                            <field name="dispatch_date" readonly="1"/>
                        </group>
                    </group>

                </page>
            </xpath>
        </field>
    </record>
</odoo>





