<odoo>
    <template id="report_salesperson_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h2>Salesperson Detail Report</h2>
                        <h4><t t-esc="salesperson_name"/></h4>
                        <p><t t-esc="date_from"/> to <t t-esc="date_to"/></p>
                    </div>

                    <table class="table table-sm table-striped mt-4">
                        <thead>
                            <tr>
                                <th class="text-center"><strong>SN.No</strong></th>
                                <th class="text-center"><strong>Product Image</strong></th>
                                <th class="text-center"><strong>Product Name</strong></th>
                                <th class="text-center"><strong>Qty</strong></th>
                                <th class="text-center"><strong>Rate</strong></th>
                                <th class="text-center"><strong>Tax</strong></th>
                                <th class="text-center"><strong>Total</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="line">
                                <tr>
                                    <td class="text-center"><t t-esc="line_index + 1"/></td>
                                    <td class="text-center">
                                        <span t-if="line.product_id.image_128" 
                                              t-field="line.product_id.image_128" 
                                              t-options='{"widget": "image", "class": "img-fluid", "style": "max-height: 45px; width: auto;"}'/>
                                    </td>
                                    <td><span t-field="line.product_id.name"/></td>
                                    <td class="text-end"><span t-field="line.product_uom_qty"/></td>
                                    <td class="text-end">
                                        <span t-field="line.price_unit" 
                                              t-options='{"widget": "monetary", "display_currency": line.currency_id}'/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="', '.join(map(lambda x: x.name, line.tax_ids))"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_total"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-end"><strong>Grand Total</strong></td>
                                <td class="text-end">
                                    <strong>
                                       <span t-esc="grand_total"
                                       t-options='{"widget": "monetary", "display_currency": docs[0].currency_id}'/>
                                    </strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="7" class="text-end">
                                    <strong>Amount in Words: </strong>
                                    <span t-esc="amount_in_words"/>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    
                    <div class="mt-4 text-muted small">
                        <p><strong>Generated on: </strong> <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/></p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>