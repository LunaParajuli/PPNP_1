<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_salesperson_report_wizard_form" model="ir.ui.view">
        <field name="name">salesperson.report.wizard.form</field>
        <field name="model">salesperson.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Salesperson Report">
                <group>
                    <group string="Salesperson">
                        <field name="user_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group string="Date Range">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                  <button name="action_generate_report" 
                          string="Generate PDF Report" 
                        type="object" 
                        class="btn-primary"/>
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_sale_report_wizard" model="ir.actions.act_window">
        <field name="name">Salesperson Report</field>
        <field name="res_model">salesperson.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <!-- Menu Item under Sales > Reporting -->
    <menuitem
        id="menu_salesperson_report_wizard"
        name="Salesperson Report"
        parent="sale.menu_sale_report"
        action="action_sale_report_wizard"
        sequence="100"/>

</odoo>